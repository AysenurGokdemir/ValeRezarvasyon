<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#309611"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Seçim Detaylarınız : "
        android:textColor="#ffffff"
        android:textSize="15dp">

    </TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="@string/company_name" />

                        <TextView
                            android:id="@+id/companyNameRez"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="ABC Vale Hizmetleri"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/darker_gray"/>
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="@string/companyDistance" />

                        <TextView
                            android:id="@+id/companyDistanceRez"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="10m"
                            android:textSize="12sp"
                            android:textStyle="italic" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="@string/companyService" />

                        <TextView
                            android:id="@+id/companyServiceRez"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Var"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="@string/serviceTime" />

                        <TextView
                            android:id="@+id/companyTimeRez"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="09:00 - 23:00"
                            android:textSize="12sp"
                            android:textStyle="italic" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/darker_gray"/>
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="50dp"
                        android:text="Ekstra Hizmetler : "></TextView>

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:text="Araç Yıkatma"
                            android:id="@+id/checkYikama"
                            android:height="1dp">

                        </androidx.appcompat.widget.AppCompatCheckBox>

                        <androidx.appcompat.widget.AppCompatCheckBox

                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:height="1dp"
                            android:id="@+id/checkYakit"
                            android:text="Yakıt Alma">

                        </androidx.appcompat.widget.AppCompatCheckBox>

                        <EditText
                            android:id="@+id/edtNot"
                            android:layout_width="300dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/style_edit_text"
                            android:hint="Not"
                            android:paddingBottom="60dp"
                            android:paddingStart="10dp"></EditText>

                        <TextView
                            android:layout_marginBottom="5dp"
                            android:paddingTop="5dp"
                            android:paddingStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Açıklama: Rezervasyon güvenliği açısından Vale Hizmeti veren firma ile iletişim bilgileriniz paylaşılacaktır.">

                        </TextView>
                    </LinearLayout>

                    <View
                       android:layout_marginTop="0.2dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="4dp"
                        android:background="@android:color/darker_gray"/>
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_marginBottom="10dp"
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:height="1dp"
                        android:id="@+id/checkOnay"
                        android:text="Onaylıyorum">

                    </androidx.appcompat.widget.AppCompatCheckBox>
                </LinearLayout>

                <Button
                    android:id="@+id/btnRez"

                    android:text="REZERVASYONU TAMAMLA"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_weight="2"
                    android:scaleType="centerInside"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/style_button"
                    />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>